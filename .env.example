# ============================================
# BACKEND.IO — Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# cp .env.example .env
# ============================================

# --- DATABASE ---
# Free tier: https://neon.tech or https://supabase.com
DATABASE_URL="postgresql://user:password@host:5432/backendio?sslmode=require"

# --- SHOPIFY ---
# Get these from your Shopify Admin → Settings → Apps → Develop Apps
SHOPIFY_STORE_URL="yourstore.myshopify.com"
SHOPIFY_ACCESS_TOKEN="shpat_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# --- EMAIL (SMTP) ---
# Option A: Use your domain with a service like Resend.com (recommended, free tier)
# Option B: Gmail (less professional but works to start)
SMTP_HOST="smtp.resend.com"
SMTP_PORT="465"
SMTP_USER="resend"
SMTP_PASS="re_xxxxxxxxxxxxxxxx"
EMAIL_FROM="tracking@yourdomain.com"

# --- APP ---
# Generate a random secret: openssl rand -base64 32
APP_SECRET="your-random-secret-key-here"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# --- TRACKING PAGE ---
# The public URL where your tracking page is hosted
NEXT_PUBLIC_TRACKING_URL="http://localhost:3000/track"
